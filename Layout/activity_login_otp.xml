<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginPhoneNumberActivity"
    android:background="@color/white"
    android:layout_margin="20dp">

    <ImageView
        android:layout_width="83dp"
        android:layout_height="105dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/otp_pwimg"
        android:id="@+id/otpImg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP Sent to your phone number "
        android:layout_below="@id/otpImg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:textSize="24sp"
        android:textColor="#696969"
        android:textStyle="bold"
        android:letterSpacing="0.08"
        android:id="@+id/userOtpTxt"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="\tOTP"
        android:inputType="number"
        android:background="@drawable/edit_text_rounded_corner"
        android:layout_below="@+id/userOtpTxt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:maxLength="6"
        android:id="@+id/userOtp"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/akhdar"
        android:layout_below="@+id/userOtp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/nextBtn"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/akhdar"
        android:layout_below="@id/nextBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/loginOtpProgressBar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\tResend OTP in 30 seconds"
        android:textColor="#696969"
        android:backgroundTint="@color/white"
        android:layout_below="@+id/loginOtpProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/resendOtpTxt" />

</RelativeLayout>